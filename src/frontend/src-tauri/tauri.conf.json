{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "MetaBonk",
  "version": "0.1.0",
  "identifier": "com.metabonk.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "MetaBonk Platform v2.0",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../../../scripts/**/*.py",
      "../../../src/__init__.py",
      "../../../src/agent/**/*.py",
      "../../../src/bridge/**/*.py",
      "../../../src/broadcast/**/*.py",
      "../../../src/cognitive/**/*.py",
      "../../../src/common/**/*.py",
      "../../../src/consciousness/**/*.py",
      "../../../src/control/**/*.py",
      "../../../src/curriculum/**/*.py",
      "../../../src/data/**/*.py",
      "../../../src/discovery/**/*.py",
      "../../../src/distributed/**/*.py",
      "../../../src/env/**/*.py",
      "../../../src/evaluation/**/*.py",
      "../../../src/exploration/**/*.py",
      "../../../src/hive/**/*.py",
      "../../../src/imitation/**/*.py",
      "../../../src/input/**/*.py",
      "../../../src/learner/**/*.py",
      "../../../src/meta/**/*.py",
      "../../../src/metabonk2/**/*.py",
      "../../../src/monitoring/**/*.py",
      "../../../src/neuro_genie/**/*.py",
      "../../../src/observability/**/*.py",
      "../../../src/omega/**/*.py",
      "../../../src/orchestrator/**/*.py",
      "../../../src/perception/**/*.py",
      "../../../src/proof_harness/**/*.py",
      "../../../src/quantum/**/*.py",
      "../../../src/safety/**/*.py",
      "../../../src/security/**/*.py",
      "../../../src/sima2/**/*.py",
      "../../../src/skills/**/*.py",
      "../../../src/spectator/**/*.py",
      "../../../src/streaming/**/*.py",
      "../../../src/training/**/*.py",
      "../../../src/transcendent/**/*.py",
      "../../../src/utils/**/*.py",
      "../../../src/vision/**/*.py",
      "../../../src/worker/**/*.py",
      "../../../src/world_model/**/*.py",
      "../../../rust/target/release/metabonk_smithay_eye",
      "../../../configs/**/*",
      "../../../requirements.txt",
      "../../../requirements-headless-streaming.txt"
    ]
  }
}
